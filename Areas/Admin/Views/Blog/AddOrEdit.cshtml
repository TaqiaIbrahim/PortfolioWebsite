@model PortfolioWebsite.Models.Blog
@{
    ViewData["title"] = "Blog";
}
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add A Blog</h4>

            <form class="forms-sample" asp-action="AddOrEdit">
                <input type="hidden" asp-for="Id" />
                <div class="form-group row">
                    <label asp-for="Date" for="exampleInputDate2" class="col-sm-3 col-form-label"> The Blog Date</label>
                    <div class="col-sm-9">
                        <input asp-for="Date" type="date" class="form-control" id="exampleInputDate2" placeholder="The Blog Date">
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" for="exampleInputDescription2" class="col-sm-3 col-form-label">Description</label>
                    <div class="col-sm-9">
                        <input asp-for="Description" type="text" class="form-control" id="exampleInputDescription2" placeholder="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                
                <button asp-action="AddOrEdit" type="submit" class="btn btn-primary mr-2"> Submit </button>
                <button asp-action="Index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
